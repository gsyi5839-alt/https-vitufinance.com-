# ==================== 数据库配置 ====================
DB_HOST=127.0.0.1
DB_PORT=3306
DB_USER=your_mysql_user
DB_PASSWORD=your_mysql_password
DB_NAME=your_database_name
DB_POOL_SIZE=10

# ==================== 服务器配置 ====================
PORT=3000
NODE_ENV=production

# ==================== 安全配置（必须设置！）====================

# JWT密钥 - 用于管理员令牌签名
# 生成方法: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your_super_secret_jwt_key_at_least_64_characters_long_generate_with_crypto

# 管理员API密钥 - 用于敏感管理操作
# 生成方法: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ADMIN_KEY=your_admin_api_key_generate_with_crypto

# ==================== 平台配置 ====================

# 平台收款钱包地址（BSC网络）
PLATFORM_WALLET_ADDRESS=0x0290df8A512Eff68d0B0a3ECe1E3F6aAB49d79D4

# ==================== 可选配置 ====================

# 日志级别: debug, info, warn, error
LOG_LEVEL=info

# API速率限制（每15分钟最大请求数）
RATE_LIMIT_MAX=100

# 登录速率限制（每15分钟最大登录尝试次数）
LOGIN_RATE_LIMIT_MAX=5
